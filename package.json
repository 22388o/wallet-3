{
  "name": "shockwallet",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "android": "node node_modules/react-native/local-cli/cli.js run-android",
    "test": "jest",
    "postinstall": "npx jetifier -r",
    "typecheck": "tsc",
    "prettify": "prettier --write \"index.js\" \"app/**/*.{js,ts}\"",
    "format": "yarn prettify",
    "lint": "eslint \"./app/**/*.js\"",
    "build:debug": "rm -f android/app/src/main/assets/index.android.bundle && cd android && ./gradlew clean && cd .. && react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res && cd android && ./gradlew assembleDebug && cd .. && cp android/app/build/outputs/apk/debug/app-debug.apk APK-DEBUG.apk",
    "build:release:delete-old-bundle": "rm -f android/app/src/main/assets/index.android.bundle",
    "build:release:clean": "cd android && ./gradlew clean && cd ..",
    "build:release:bundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "build:release:delete-bad-res": "find android/app/src/main/res/drawable-* -type f -not -name 'launch_screen.png' -delete",
    "build:release:assemble": "cd android && ./gradlew assembleRelease && cd ..",
    "build:release:post-assemble": "cp android/app/build/outputs/apk/release/app-release.apk APK-RELEASE.apk",
    "build:release": "yarn build:release:delete-old-bundle && yarn build:release:clean && yarn build:release:bundle && yarn build:release:delete-bad-res && yarn build:release:assemble && yarn build:release:post-assemble",
    "build": "yarn run build:debug && yarn build:release"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "babel-polyfill": "^6.26.0",
    "big.js": "^5.2.2",
    "bitcoin-convert": "^1.0.4",
    "crypto-js": "^3.1.9-1",
    "eslint-config-defaults": "^9.0.0",
    "exponential-backoff": "^2.1.1",
    "gun": "^0.2019.612",
    "jetifier": "^1.6.4",
    "jsonfile": "^4.0.0",
    "jsonwebtoken": "^8.4.0",
    "moment": "^2.24.0",
    "opencollective-postinstall": "^2.0.2",
    "react": "^16.6.3",
    "react-native": "^0.57.7",
    "react-native-bootsplash": "^1.0.3",
    "react-native-camera": "^1.13.1",
    "react-native-deep-link": "^0.2.9",
    "react-native-deep-linking": "^2.2.0",
    "react-native-elements": "^0.19.1",
    "react-native-gifted-chat": "^0.9.3",
    "react-native-keyboard-aware-scroll-view": "^0.6.0",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-qrcode": "^0.2.7",
    "react-native-qrcode-scanner": "^1.2.3",
    "react-native-qrcode-svg": "^5.2.0",
    "react-native-ratings": "^6.5.0",
    "react-native-sensitive-info": "^5.5.3",
    "react-native-smart-carousel": "^1.1.0",
    "react-native-svg": "^9.11.1",
    "react-native-vector-icons": "^4.6.0",
    "react-navigation": "^2.18.3",
    "react-redux": "^6.0.1",
    "redux": "^4.0.4",
    "redux-persist": "^6.0.0",
    "redux-persist-sensitive-storage": "^1.0.0",
    "redux-thunk": "^2.3.0",
    "scheduler": "0.16.1",
    "socket.io-client": "2.1.1",
    "tslib": "^1.9.3",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@types/big.js": "^4.0.5",
    "@types/gun": "^0.9.1",
    "@types/jest": "23.x.x",
    "@types/lodash": "^4.14.136",
    "@types/react": "^16.8.22",
    "@types/react-native": "0.57.7",
    "@types/react-native-qrcode": "^0.2.2",
    "@types/react-native-vector-icons": "^6.4.1",
    "@types/react-native-video": "^3.1.5",
    "@types/react-navigation": "^2.13.10",
    "@types/react-redux": "^6.0.1",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.5",
    "babel-eslint": "^10.0.3",
    "babel-jest": "23.0.1",
    "babel-preset-react-native": "4.0.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-native": "^3.8.1",
    "flow-bin": "^0.78.0",
    "husky": "^3.1.0",
    "jest": "23.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.17.1",
    "react-test-renderer": "16.3.1",
    "typescript": "^3.5.2"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "rnpm": {
    "assets": [
      "./app/assets/fonts/"
    ]
  },
  "lint-staged": {
    "app/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "index.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && yarn lint-staged"
    }
  }
}
